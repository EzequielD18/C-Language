#include <stdio.h>

    //converting units
    struct meter_convertion
    {
        float meter_mile: 2.237; //multiply
        float meter_foot: 3.281; //meter
        float meter_km: 3.6; //multiply
        float meter_knot: 1.944; //multiply
    };

    struct mile_conversion
    {
        float mile_meter: 2.237; //multiply
        float mile_foot: 1.467; //multiply
        float mile_km: 1.609; //multiply
        float mile_knot: 1.151 //divide
    };

    struct foot_convertion
    {
        float foot_mile: 1.467; //divide
        float foot_meter: 3.281; //divide
        float foot_km: 1.097; //multiply
        float foot_knot: 1.688; //divide
    };

    struct km_convertion
    {
        float km_meter: 3.6; //divide
        float km_mile: 1.609; //divide
        float km_foot: 1.097; //divide
        float km_knot: 1.852; //divide
    };

    struct knot_convertion
    {
        float knot_meter: 1.944; //divide
        float knot_km: 1.852; //multiply
        float knot_mile: 1.151; //multiply
        float knot_foot: 1.688; //multiply
    };

